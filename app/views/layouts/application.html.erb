<!DOCTYPE html>
<html>
  <head>
    <title>LexFaq</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |type, message| %>
      <div class="flashAlert <%= type %>"><%= message %></div>
    <% end %>
    <div class='container'>
      <div class='header'>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
